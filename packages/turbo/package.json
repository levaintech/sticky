{
  "name": "@stickyjs/turbo",
  "version": "0.0.0",
  "repository": {
    "url": "git+https://github.com/levaintech/sticky"
  },
  "main": "./dist/index.js",
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsc -b ./tsconfig.build.json",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "test": "jest"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@stickyjs"
    ]
  },
  "jest": {
    "preset": "@stickyjs/jest"
  },
  "devDependencies": {
    "@stickyjs/jest": "workspace:*",
    "turbo": "1.10.6"
  },
  "peerDependencies": {
    "turbo": "*"
  }
}
