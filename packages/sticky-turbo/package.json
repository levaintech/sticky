{
  "name": "@birthdayresearch/sticky-turbo",
  "version": "0.0.0",
  "repository": {
    "url": "git+https://github.com/BirthdayResearch/sticky"
  },
  "main": "./dist/index.js",
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsc -b ./tsconfig.build.json",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "test": "jest"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "@birthdayresearch"
    ]
  },
  "jest": {
    "preset": "@birthdayresearch/sticky-jest"
  },
  "dependencies": {
    "turbo": "1.10.2"
  },
  "devDependencies": {
    "@birthdayresearch/sticky-jest": "workspace:*"
  }
}
